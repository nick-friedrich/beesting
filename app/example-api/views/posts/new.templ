package postviews

templ New() {
	<div class="text-center mx-auto flex flex-col items-center justify-center">
		<form method="post">
			<input type="text" name="title" placeholder="Title" class="input"/>
			<input type="text" name="content" placeholder="Content" class="input"/>
			<input type="text" name="author" placeholder="Author" class="input"/>
			<input type="checkbox" name="published" checked/>
			<button type="submit" class="btn btn-primary">Create Post</button>
		</form>
	</div>
}
